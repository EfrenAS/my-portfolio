---
import '../styles/normalize.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    
    <!-- Meta Tags Primarios -->
    <title>{title} | Portafolio de Efren</title>
    <meta name="title" content={`${title} | Portafolio de Efren`} />
    <meta name="description" content="Portafolio profesional que muestra mis proyectos, habilidades y experiencia en desarrollo web." />
    <meta name="keywords" content="portafolio, desarrollo web, frontend, backend, fullstack, programación, proyectos, desarrollador" />
    <meta name="author" content="Efren Anastacio Simeon" />
    <meta name="copyright" content="© 2024 Efren Anastacio Simeon. Todos los derechos reservados." />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="sitio web" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={`${title} | Portafolio de Efren`} />
    <meta property="og:description" content="Portafolio profesional que muestra mis proyectos, habilidades y experiencia en desarrollo web" />
    <meta property="og:image" content="/images/og-image.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={`${title} | Portafolio de Efren`} />
    <meta property="twitter:description" content="Portafolio profesional que muestra mis proyectos, habilidades y experiencia en desarrollo web." />
    <meta property="twitter:image" content="/images/og-image.jpg" />

    <!-- Favicon y Tema -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#1a1a1a" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Adicionales -->
    <meta name="format-detection" content="telephone=no" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Philosopher:wght@400;700&display=swap');
  :root {
    /* Main Colors for this project */
    --oxford-blue: rgba(15, 12, 41, 100%);
    --space-cadet: rgba(48, 43, 99, 100%);
    --powder-blue: rgba(175, 166, 255, 100%);
    --ghost-white: rgba(251, 251, 255, 100%);
    --orange-peel: rgba(255, 159, 28, 100%);
    
    --light-color: var(--ghost-white);
    --dark-color: var(--oxford-blue);
    --accent-color: var(--orange-peel);
    --primary-color: var(--powder-blue);
    --secondary-color: var(--space-cadet);
    
    /* Font Types */
    --font-titles: Philosopher, sans-serif;
    --font-texts: Mulish, sans-serif;
    
    /* Text Size */
    --text-sm: 1.2rem;
    --text-md: 1.4rem;
    --text-normal: 1.6rem;
    --text-large: 2rem;
    --text-xl: 2.4rem;
    
    /* Media Queries */
    --d-small: 480px;
    --d-medium: 900px;
    --d-large: 1024px;
    --d-xlarge: 1440px;
    
    /* Scheme Color */
    color-scheme: light dark;
  }
  
  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }
  
  html {
    box-sizing: border-box;
    font-size: 62.5%;
    scroll-behavior: smooth;
  }
  
  body {
    color: var(--dark-color);
    font-size: 1.6rem;
    height: 100vh;
  }
  
  body.light__theme {
    background: none;
    background-color: var(--light-color);
    color: var(--dark-color);
  }
  
  body.light__theme .text-orange {
    color: var(--accent-color);
  }
  
  .text-orange {
    color: var(--accent-color);
  }

  /**** DARK THEME  ****/
  @media (prefers-color-scheme: dark) {
    body {
      background: #0f0c29;  /* fallback for old browsers */
      background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);  /* Chrome 10-25, Safari 5.1-6 */
      background: linear-gradient(to right, #24243e, #302b63, #0f0c29); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      background-repeat: repeat;
      color: var(--white-color);
    }
  }
  
  body.dark__theme {
      background: #0f0c29;  /* fallback for old browsers */
      background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);  /* Chrome 10-25, Safari 5.1-6 */
      background: linear-gradient(to right, #24243e, #302b63, #0f0c29); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      background-repeat: repeat;
      color: var(--white-color);
  }
  
  a {
    cursor: pointer;
    text-decoration: none;
    font-family: var(--font-titles);
    color: var(--light-color);
  }

  @media (prefers-color-scheme: dark) {
    a {
      color: var(--light-color);
    }
  }
  
  body.light__theme a {
    color: var(--dark-color);
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-titles);
    margin: 0;
  }

  h2 {
    font-size: clamp(20px, 3vw, 35px);
    filter: opacity(65%);
  }

  p,
  span {
    font-family: var(--font-texts);
    line-height: 1.5;
    margin: 0;
  }

  img,
  picture {
    max-width: 100%;
    width: 100%;
  }

  /** GLOBAL STYLES **/

  .section-padding {
    padding: 4rem 1rem;
  }

  @media(min-width: 1200px) {
    .section-padding {
      padding: 4rem 0;
    }
  }

  /** Size Font **/
  .font-sm {
    font-size: 1.2rem;
  }

  /* Container */
  .container {
    margin: 0 auto;
    width: 100%;
    max-width: 120rem;
  }

  .text-primary {
    color: var(--primary-color);
  }

  .title-lg {
    font-size: var(4rem);
  }

  .brightness-100 {
    filter: brightness(100%);
  }

  .text-center {
    text-align: center;
  }

  .bg_dark {
    background-color: var(--dark-color);
  }
  
  .p-1 {
    padding: 0.5rem;
  }

  .rounded {
    border-radius: 0.5rem;
  }

  .overflow-hidden {
    overflow: hidden;
  }

  .skill {
    filter: opacity(50%) grayscale(90%);
    height: clamp(3rem, 10vw, 6rem);
    width: clamp(3rem, 10vw, 6rem);
    transition: all 0.3s ease-in-out;
  }

  body.light__theme .skill {
    filter: opacity(50%) grayscale(90%);
  }

  @media(prefers-color-scheme: dark) {
    .skill {
      filter: opacity(30%) grayscale(70%);
    }
  }

  body.dark__theme .skill {
    filter: opacity(30%) grayscale(70%);
  }

</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const colorThemePreference = setColorSchemePreference();

    localStorage.setItem('theme', colorThemePreference);

    if (colorThemePreference === 'light') {
      document.body.classList.add('light__theme');
    }
  });

  function setColorSchemePreference() {
    if (
      window.matchMedia &&
      window.matchMedia('(prefers-color-scheme: dark)').matches
    ) {
      return 'dark';
    } else {
      return 'light';
    }

    return 'no-preference';
  }
</script>

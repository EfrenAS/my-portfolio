---
import MenuMobileCloseButton from './MenuMobileCloseButton.astro';
import Navbar from './Navbar.astro';
---
<div aria-label="navigation" class="navigation">
  <MenuMobileCloseButton />
  <Navbar mobileNavbar/>
</div>

<style>
  .navigation {
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    z-index: 100;
    background-color: rgba(2, 22, 39, 50%);
  }
  
  @media (min-width: 600px) {
    .navigation {
      display: none;
    }
  }

  .show-on {
    display: block;
    animation: slideIn 0.5s ease-in-out forwards;
  }

  @keyframes slideIn {
    from { 
      transform: translateX(-100%);
      opacity: 0;
    }
    to { 
      transform: translateX(0); 
      opacity: 1;
    }
  }
  
  @keyframes slideOut {
    from { 
      transform: translateX(100%);
      opacity: 1;
    }
    to { 
      transform: translateX(0);
      opacity: 0;
    }
  }
</style>

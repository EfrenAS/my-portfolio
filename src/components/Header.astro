---
import LogoMobile from './LogoMobile.astro';
import LogoDesk from './LogoDesk.astro';
import Navigation from './Navigation.astro';
import ToggleTheme from './ToggleTheme.astro';
---

<header>
  <LogoDesk />
  <LogoMobile />
  <Navigation />
  <ToggleTheme />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    grid-area: header;
  }
</style>

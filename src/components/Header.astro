---
import Navigation from './Navigation.astro';
import ToggleThemeButton from './ToggleThemeButton.astro';
import MenuMobile from './MenuMobile.astro';
import MenuSocialMedia from './MenuSocialMedia.astro';
import Navbar from './Navbar.astro';
---

<header>
  <MenuMobile />
  <MenuSocialMedia />
  <Navigation />
  <Navbar />
  <ToggleThemeButton />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    grid-area: header;
  }

  @media(min-width: 600px) {
    header {
      padding: 1rem;
    }
  }
</style>

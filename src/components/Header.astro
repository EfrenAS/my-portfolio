---
import Navigation from './Navigation.astro';
import ToggleTheme from './ToggleTheme.astro';
import MenuMobile from './MenuMobile.astro';
import MenuSocialMedia from './MenuSocialMedia.astro';
import Navbar from './Navbar.astro';
---

<header>
  <MenuMobile />
  <MenuSocialMedia />
  <Navigation />
  <Navbar />
  <ToggleTheme />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    grid-area: header;
  }

  @media(min-width: 1200px) {
    header {
      padding: 1rem 3rem;
    }
  }

</style>

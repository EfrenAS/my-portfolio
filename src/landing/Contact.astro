---
import ContactNavigation from '../components/ContactNavigation.astro';
---

<section id="contact" class="section-padding container contact">
  <h2>Quieres compartir conmigo tu idea? ¡Hablemos! 🤝🏽</h2>
  <a
    href="mailto: histrix.dev@gmail.com?subject=Hola%20Efren%20me%20encantaria%20compartir%20mi%20idea%20contigo."
    target="_blank"
    title="Correo de trabajo de Efren de Anastacio Simeon">
      histrix.dev@gmail.com
  </a>
  <ContactNavigation />
</section>
<style>
  .contact {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    background-color: rgba(175, 166, 255, 20%);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    height: 30rem;
    max-height: 40rem;
    margin-top: 4rem;
  }
  
  @media(min-width: 1200px) {
    .contact {
      border-radius: 0.5rem;
    }
  }

  .contact h2 {
    text-wrap: pretty;
    text-align: center;
  }
  
  .contact > a {
    color: var(--secondary-color);
    font-size: clamp(var(--text-md), 4vw, var(--text-xl));
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 1rem;
    text-decoration-thickness: 2px;
    transition: all 0.3s ease;
  }
  
  body.light__theme .contact > a {
    color: var(--secondary-color);
  }

  @media (prefers-color-scheme: dark) {
    .contact > a {
      color: var(--primary-color);
    }
  }
  
  body.dark__theme .contact > a {
    color: var(--primary-color);
  }
  
  .contact > a:hover {
    transform: scale(1.05);
    text-underline-offset: 0.5rem;
  }
</style>

  }

  .profession span {
    font-family: var(--font-titles);
    color: var(--accent-color);
  }

  .experience-text {
    font-family: var(--font-texts);
    font-size: clamp(var(--text-md), 2vw, 20px);
    text-wrap: pretty;
    margin-top: 4rem;
  }
  
  @media (min-width: 768px) {
    .experience-text {
      margin-top: 2rem;
    }
  }

  .links-container {
    display: flex;
    gap: 2rem;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: flex-end;
    width: 100%;
  }

  .hero {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .emoji {
    padding-left: 0.5rem;
    font-size: var(--text-large);
  }

  .skills-section {
    display: flex;
    gap: 3rem;
    justify-content: center;
    width: 100%;
    padding: 2rem 0;
  }

